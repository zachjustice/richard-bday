<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<%= form_with url: session_path do |form| %>
  <%= form.text_field :name, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your username", value: params[:username] %><br>
  <%= form.text_field :code, required: true, autocomplete: "room-code", placeholder: "Enter the room code", maxlength: 72 %><br>
  <%= form.submit "Sign in" %>
<% end %>
<br>
