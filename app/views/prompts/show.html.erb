<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>
<h2>
  <%= @game_prompt.prompt.description %>
</h2>
<div>
  <%= form_with url: "/answer", method: :post do |form| %>
    <%= form.hidden_field :prompt_id, required: true, value: @game_prompt.id %><br>
    <%= form.text_field :text, required: true, autocomplete: "off", placeholder: "Enter your answer..." %><br>
    <%= form.submit "Submit" %>
  <% end %>
</div>
