<%# app/views/prompts/_prompt_form.html.erb %>
<%= form_with model: prompt,
    url: update_prompt_path(prompt),
    method: :patch,
    class: "flex flex-col gap-4 animate-slide-in" do |form| %>

  <div class="flex flex-col gap-2">
    <%= form.label :description, "Prompt Question", class: "font-semibold text-ink" %>
    <%= form.text_area :description,
        rows: 2,
        placeholder: "What is a funny animal?",
        class: "story-form-textarea" %>
  </div>

  <div class="flex flex-col gap-2">
    <%= form.label :tags, "Tags (comma-separated)", class: "font-semibold text-ink" %>
    <%= form.text_field :tags,
        placeholder: "noun,animal,funny",
        class: "story-form-input" %>
  </div>

  <div class="flex gap-4 pt-2">
    <%= form.submit "Save", class: "btn-primary btn-sm" %>
    <button type="button"
            data-action="click->prompt-editor#cancelEdit"
            class="btn-secondary btn-sm">
      Cancel
    </button>
  </div>
<% end %>
