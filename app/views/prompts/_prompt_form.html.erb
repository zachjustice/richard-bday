<!-- app/views/prompts/_prompt_form.html.erb -->
<%= form_with model: prompt, 
    url: update_prompt_path(prompt),
    method: :patch,
    class: "prompt-edit-form" do |form| %>

  <div class="form-field">
    <%= form.label :description, "Prompt Question" %>
    <%= form.text_area :description, 
        rows: 2,
        placeholder: "What is a funny animal?",
        class: "form-textarea" %>
  </div>

  <div class="form-field">
    <%= form.label :tags, "Tags (comma-separated)" %>
    <%= form.text_field :tags, 
        placeholder: "noun,animal,funny",
        class: "form-input" %>
  </div>

  <div class="form-actions">
    <%= form.submit "Save", class: "btn-primary btn-sm" %>
    <button type="button" 
            data-action="click->prompt-editor#cancelEdit"
      class="btn-secondary btn-sm">
      Cancel
    </button>
  </div>
<% end %>
