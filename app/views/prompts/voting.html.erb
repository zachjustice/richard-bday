<%= stylesheet_link_tag "prompt-voting", "data-turbo-track": "reload" %>
<%= turbo_stream_from "rooms:#{@current_room.id}:nav-updates" %>

<div data-controller="prompt" class="prompt-voting-container">
  <div class="prompt-voting-card">

    <div class="voting-header">
      <div class="voting-icon">üó≥Ô∏è</div>
      <h2 class="voting-title"><%= @game_prompt.prompt.description %></h2>
    </div>

    <%= form_with url: "/vote", method: :post, class: "voting-form" do |form| %>
      <%= form.hidden_field :game_prompt_id, required: true, value: @game_prompt.id %>

      <div class="answers-list-wrapper">
        <div class="answers-list answers-list answers-list--fade">
          <%= form.collection_radio_buttons :answer_id, @answers, :id, :text do |b| %>
            <label class="answer-option">
              <%= b.radio_button name: 'answer_id', value: :id, class: "answer-radio" %>
              <div class="answer-content">
                <span class="answer-checkmark">‚úì</span>
                <p class="answer-text"><%= b.text %></p>
              </div>
            </label>
          <% end %>
        </div>
      </div>

      <%= form.submit "Submit Vote", class: "submit-button" %>
    <% end %>
  </div>
</div>
