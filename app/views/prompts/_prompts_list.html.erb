<%# app/views/prompts/_prompts_list.html.erb %>
<div id="prompts_list" class="flex flex-col gap-4 max-h-screen overflow-y-auto">
  <% if prompts.any? %>
    <% prompts.each do |prompt| %>
      <%= render "prompts/prompt", prompt: prompt %>
    <% end %>
  <% else %>
    <div class="flex flex-col items-center justify-center py-12 text-center">
      <svg class="w-16 h-16 text-ink/20 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <p class="text-ink/60 text-lg font-medium">No prompts found</p>
      <p class="text-ink/40 text-sm">Try adjusting your search or create a new prompt</p>
    </div>
  <% end %>
</div>
