<%# app/views/prompts/index.html.erb %>
<div class="max-w-[1400px] w-full flex flex-col flex-1 p-8 md:p-4 m-auto">
  <div class="mb-8 flex flex-row justify-between flex-wrap gap-4">
    <div>
      <h1 class="text-3xl font-bold text-ink m-0">Prompts Library</h1>
      <p class="text-ink/60 mt-2 mb-0">Manage questions used to fill story blanks</p>
    </div>
    <div>
      <%= link_to "Stories", stories_path, class: "btn-secondary" %>
    </div>
  </div>

  <div class="grid grid-cols-[2fr_1fr] gap-8 lg:grid-cols-1">
    <div class="bg-page p-6 rounded-xl border-3 border-ink sticky top-8 lg:static shadow-strong">
      <div id="new_prompt_form">
        <%= render "prompts/form", prompt: Prompt.new %>
      </div>
    </div>

    <div class="bg-white p-8 rounded-xl border-3 border-ink shadow-strong">
      <h2 class="text-xl font-bold text-ink m-0 mb-4">All Prompts (<%= @prompts.count %>)</h2>
      <div id="prompts_list" class="flex flex-col gap-4 max-h-screen overflow-y-auto">
        <% @prompts.each do |prompt| %>
          <%= render "prompts/prompt", prompt: prompt %>
        <% end %>
      </div>
    </div>
  </div>
</div>
