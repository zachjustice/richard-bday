<%= turbo_stream_from "rooms:#{@current_room.id}:nav-updates" %>
<%= render "shared/leave_game_button" %>

<div data-controller="prompt navigation-check" data-navigation-check-room-id-value="<%= @current_room.id %>" class="h-screen flex items-center max-sm:items-center justify-center bg-page">
  <div class="card-primary p-10 m-10 max-sm:p-6 max-sm:m-4 max-w-[600px] w-full animate-fade-in">
    <div class="text-center">
      <div class="text-6xl mb-6 animate-swing">‚è≥</div>
      <h2 class="text-3xl md:text-2xl font-bold text-gray-900 m-0 mb-3 leading-tight">Answer submitted</h2>
      <p class="text-base md:text-sm text-gray-500 m-0 mb-8 italic">Waiting for everyone to submit answers...</p>
      <div class="progress-dots mb-6">
        <div class="progress-dot"></div>
        <div class="progress-dot"></div>
        <div class="progress-dot"></div>
      </div>
      <%= render "shared/fun_facts" %>

      <div class="mt-6">
        <%= form_with url: change_answer_path(@game_prompt.id), method: :post do %>
          <%= submit_tag "Change Answer", class: "btn-secondary btn-sm" %>
        <% end %>
      </div>
    </div>
  </div>
</div>