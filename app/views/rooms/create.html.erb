<div class="min-h-screen bg-page overflow-auto">
  <%= render "shared/doodle_decorations" %>

  <div class="relative z-10 flex flex-col min-h-screen">
    <!-- Hero Section -->
    <main class="flex-1 flex flex-col items-center justify-center px-4 py-12 md:py-16">
      <div class="w-full max-w-2xl mx-auto text-center animate-slide-up">

        <!-- Logo -->
        <h1 class="title-primary mb-4">BLANKSIES</h1>

        <!-- Tagline -->
        <p class="tagline mb-8 max-w-lg mx-auto">
          Vote on friends' answers to witty prompts to create fill-in-the-blank stories
        </p>

        <!-- Flash notice -->
        <%= tag.div(flash[:notice], class: "bg-accent-primary/10 text-accent-primary border-2 border-accent-primary/30 px-4 py-3 rounded-xl text-sm mb-6 font-medium") if flash[:notice] %>

        <!-- Main Card -->
        <div class="card-primary mb-8">
          <!-- CTA -->
          <%= form_with url: "/rooms/create", method: :post, class: "mb-6" do |form| %>
            <%= form.submit "Start a Game", class: "btn-primary w-full text-xl" %>
          <% end %>

          <p class="body">
            Already have a game?
            <%= link_to "Join as a player", new_session_path, class: "font-semibold" %>
          </p>
        </div>

        <!-- How It Works -->
        <div class="card-subdued mb-8">
          <h2 class="heading mb-6">How It Works</h2>

          <div class="grid md:grid-cols-3 gap-6 text-left">
            <!-- Step 1 -->
            <div class="flex flex-col items-center text-center">
              <div class="step-indicator bg-accent-tertiary text-ink mb-3">1</div>
              <h3 class="label mb-1">Answer Prompts</h3>
              <p class="body">Everyone answers fun, witty prompts on their phones</p>
            </div>

            <!-- Step 2 -->
            <div class="flex flex-col items-center text-center">
              <div class="step-indicator bg-accent-secondary text-ink-inverted mb-3">2</div>
              <h3 class="label mb-1">Vote for Favorites</h3>
              <p class="body">Pick the funniest answers from your friends</p>
            </div>

            <!-- Step 3 -->
            <div class="flex flex-col items-center text-center">
              <div class="step-indicator bg-accent-primary text-ink-inverted mb-3">3</div>
              <h3 class="label mb-1">Read the Story</h3>
              <p class="body">Watch as winning answers fill in the blanks!</p>
            </div>
          </div>
        </div>

        <p class="body mt-6 text-sm">
          Looking to write your own stories? <%= link_to "Editor login", editor_login_path, class: "font-semibold" %>
        </p>

      </div>
    </main>

    <!-- Footer -->
    <footer class="py-6 px-4">
      <div class="flex flex-wrap justify-center gap-4 text-sm body">
        <%= link_to "Copyright", copyright_path %>
        <span>·</span>
        <%= link_to "About", about_path %>
        <span>·</span>
        <%= link_to "Bots", "/babble" %>
      </div>
    </footer>
  </div>
</div>
