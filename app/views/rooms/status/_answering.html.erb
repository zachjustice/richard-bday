<div class="status-page-spacing answering-container">
  <div class="answering-card">
    <div class="prompt-section">
      <div class="prompt-icon">ðŸ’­</div>
      <h2 class="prompt-text"><%= @game_prompt.prompt.description %></h2>
      <p class="prompt-instruction">Answer on your device</p>
    </div>

    <div class="progress-section">
      <h3>Progress</h3>
      <div class="progress-grid">
        <div class="progress-stats">
          <div class="stat-card stat-completed">
            <span class="stat-number"><%= @users_with_submitted_answers.count %></span>
            <span class="stat-label">Completed</span>
          </div>
          <div class="stat-card stat-waiting">
            <span class="stat-number"><%= @users.count - @users_with_submitted_answers.count %></span>
            <span class="stat-label">Waiting</span>
          </div>
        </div>

        <div class="completed-users">
          <ul id="users-with-submitted-answers" class="completed-list">
            <% @users.each do |user| %>
              <li 
                id="submitted-answer-<%= user %>" 
                class=<%= @users_with_submitted_answers.include?(user.name) ? "completed-user" : "answering-user" %>
              >
                <%= user.name %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
