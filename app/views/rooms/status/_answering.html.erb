<%= turbo_stream_from "rooms:#{room.id}:answers" %>

<div class="flex-1 flex flex-col justify-start min-h-0">
  <div class="text-center p-6 mb-8 bg-gradient-primary-tint rounded-xl border-2 border-brand-purple/10">
    <%= render "shared/countdown_timer", duration: room.current_game.next_game_phase_time - Time.now - GameConstants::COUNTDOWN_FORGIVENESS_SECONDS, auto_start: true %>
    <h1 class="text-4xl font-bold text-gray-900 mb-3 leading-tight">Answer the prompt on your device</h2>
    <p class="text-gray-500 italic m-0">Everyone answers the same prompt</p>
  </div>

  <div class="p-6 rounded-xl bg-linear-to-br from-brand-deep-purple/5 to-brand-deep-purple/8 border-2 border-brand-deep-purple/15 flex-1 min-h-0">
    <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">Answers</h3>
    <div class="flex flex-col flex-1 min-h-0">
      <ul id="users-with-status-list" class="list-none p-0 m-0 gap-3 grid grid-cols-[repeat(auto-fit,minmax(200px,1fr))]">
        <% users.each do |user| %>
          <%= render "rooms/partials/user_with_status_item", user: user, completed: users_with_submitted_answers.include?(user.name) %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
