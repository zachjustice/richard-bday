<div class="flex-1 flex flex-col justify-start min-h-0">
  <div class="card-subdued text-center mb-8 border-l-4 border-accent-green/40 bg-accent-green/10 border-l-accent-green"
       data-controller="speech"
       data-speech-text-value="<%= render_plaintext(story_text, blank_id_to_answer_text) %>">
    <div class="relative w-full text-center">
      <h2 class="text-2xl max-md:text-xl font-bold text-ink m-0">
        <%= current_room.current_game.story.title %>
        <button class="-translate-y-1/2 text-sm cursor-pointer" type="button" data-action="click->speech#speak">
          ðŸ”Š
        </button>
      </h2>
    </div>

    <div class="flex flex-col items-center gap-2 mt-4">
      <span class="text-sm font-medium text-ink/60 italic">Written by:</span>
      <div class="flex flex-wrap gap-2 justify-center">
        <% users.each do |user| %>
          <span class="px-3 py-1 rounded-full text-sm font-semibold text-ink border-2 border-ink/20 bg-accent-green/10"><%= user.name %></span>
        <% end %>
      </div>
    </div>

  </div>
  <div class="card-subdued flex-1 min-h-0 overflow-y-auto border-l-4 border-accent-green/40 border-l-accent-green bg-accent-green/10">
    <p class="text-lg max-md:text-base text-ink leading-relaxed m-0 text-justify max-md:text-left">
      <%= simple_format(render_story_with_tooltips(story_text, blank_id_to_answer_text), {}, sanitize: false) %>
    </p>
  </div>
</div>
