<footer class="status-footer">
  <div class="footer-left">
    <div class="player-counter">
      <span class="counter-icon">ðŸ‘¥</span>
      <span class="counter-text"><%= @users.count %> <%= @users.count == 1 ? 'Player' : 'Players' %></span>
    </div>
  </div>

  <div class="footer-center">
    <% if @room.current_game.present? %>
      <%
        total_prompts = GamePrompt.where(game_id: @room.current_game_id).count
        current_prompt_order = @room.current_game.current_game_prompt&.order || 0
        current_round = current_prompt_order + 1
      %>
      <div class="round-progress">
        <span class="progress-text">Round <%= current_round %> of <%= total_prompts %></span>
      </div>
    <% end %>
  </div>

  <div class="footer-right">
    <div class="footer-links">
      <span class="branding">Blanksies</span>
    </div>
  </div>
</footer>
