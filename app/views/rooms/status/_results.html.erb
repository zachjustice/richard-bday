<div class="flex-1 flex flex-col justify-start min-h-0"
     data-controller="results-auto-advance"
     data-results-auto-advance-duration-value="15">
  <div class="card-status-header-violet relative">
    <div class="absolute top-3 right-3">
      <div class="countdown-timer countdown-timer-sm" data-phase="green">
        <span class="countdown-timer-display"
              data-results-auto-advance-target="display">15</span>
        <svg class="countdown-timer-svg" viewBox="0 0 100 100">
          <circle class="countdown-timer-circle-bg" cx="50" cy="50" r="45"></circle>
          <circle class="countdown-timer-circle" cx="50" cy="50" r="45"
                  data-results-auto-advance-target="circle"></circle>
        </svg>
      </div>
    </div>

    <% if winners.size == 1 %>
      <h1 class="text-4xl font-bold text-ink m-0 flex items-center justify-center gap-2">Winner!</h1>
    <% elsif winners.size > 1 %>
      <h1 class="text-4xl font-bold text-ink m-0 flex items-center justify-center gap-2"><%= winners.size %>-Way Tie</h1>
    <% else %>
      <h1 class="text-4xl font-bold text-ink m-0 flex items-center justify-center gap-2">No Winner</h1>
    <% end %>
  </div>

  <div class="card-status-content-violet py-4 flex">
    <div class="flex flex-1 min-h-0 flex-col gap-2 overflow-y-auto scroll-fade-indicators">
      <% answers_sorted_by_votes.each do |answer| %>
        <div class="flex flex-row p-3 border-2 rounded-xl border-accent-violet/40 <%= winner&.id == answer&.id ? 'bg-accent-violet/40' : 'bg-accent-violet/10'  %>">
          <div class="w-full flex flex-col flex-1">
            <span class="text-lg block text-ink leading-tight font-bold">
              <%= answer.text %>
              <%= 'ðŸ†' if winner&.id == answer&.id %>
              <% if local_assigns[:audience_star_counts] && audience_star_counts[answer.id]&.positive? %>
                <%= render "shared/audience_stars", count: audience_star_counts[answer.id] %>
              <% end %>
            </span>
            <span class="text-lg block text-ink/60 leading-tight font-medium whitespace-nowrap overflow-hidden text-ellipsis"><%= answer.user.avatar_with_name %></span>
            <% if local_assigns[:ranked_voting] && local_assigns[:points_by_answer] %>
              <span class="text-base font-bold text-accent-primary mt-1">
                <%= points_by_answer[answer.id] %> points
              </span>
            <% end %>
          </div>
          <div class="flex flex-1 flex-col items-end w-full">
            <% if votes_by_answer[answer.id]&.any? %>
              <div class="flex flex-col gap-2">
                <% if local_assigns[:ranked_voting] %>
                  <%# Grouped by rank for ranked voting %>
                  <% votes_by_answer[answer.id].group_by(&:rank).sort_by { |rank, _| rank || 999 }.each do |rank, rank_votes| %>
                    <% next if rank.nil? %>
                    <div class="flex items-center gap-1 flex-wrap">
                      <span class="text-lg"><%= GameConstants::RANKED_MEDALS[rank - 1] %></span>
                      <% visible_votes = rank_votes.first(5) %>
                      <% remaining_count = rank_votes.size - 5 %>
                      <% visible_votes.each do |vote| %>
                        <span class="text-lg"><%= vote.user.avatar %></span>
                      <% end %>
                      <% if remaining_count > 0 %>
                        <span class="text-sm font-bold text-ink/60">+<%= remaining_count %></span>
                      <% end %>
                    </div>
                  <% end %>
                <% else %>
                  <%# Simple list for vote-once %>
                  <div class="flex flex-wrap gap-2">
                    <% visible_votes = votes_by_answer[answer.id].first(5) %>
                    <% remaining_count = votes_by_answer[answer.id].size - 5 %>
                    <% visible_votes.each do |vote| %>
                      <span class="text-xl"><%= vote.user.avatar %></span>
                    <% end %>
                    <% if remaining_count > 0 %>
                      <span class="text-sm font-bold text-ink/60">+<%= remaining_count %></span>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex justify-center mt-4">
    <%= form_with url: "/rooms/#{current_room.id}/next", method: :post,
                  data: { results_auto_advance_target: "form" } do |form| %>
      <%= form.submit "Next Round", class: "btn-primary" %>
    <% end %>
  </div>
</div>
