<%# Podium display for 1st, 2nd, 3rd place %>
<%# Expects: podium - array of {user:, points:} hashes, up to 3 %>

<div class="relative animate-slide-up" style="animation-delay: 0.2s;">
  <%# Podium structure - 2nd | 1st | 3rd %>
  <div class="flex items-end justify-center gap-3 px-4">
    <%# 2nd Place %>
    <div class="flex flex-col items-center animate-slide-up" style="animation-delay: 0.4s;">
      <% second = podium[1] %>
      <% if second %>
        <div class="text-5xl mb-2 animate-bouncy" style="animation-delay: 0.6s;"><%= second[:user].avatar %></div>
        <div class="w-24 md:w-28 h-24 rounded-t-xl flex flex-col items-center justify-center border-3 border-ink bg-accent-blue/30 px-1"
             style="box-shadow: 4px 4px 0px var(--color-ink);">
          <span class="text-2xl">ðŸ¥ˆ</span>
          <p class="font-bold text-ink text-sm truncate max-w-20 md:max-w-24 text-center"><%= second[:user].name %></p>
          <p class="text-xs text-ink/70 font-semibold"><%= second[:points] %> pts</p>
        </div>
      <% else %>
        <div class="text-4xl mb-2 opacity-30">?</div>
        <div class="w-24 md:w-28 h-24 rounded-t-xl flex items-center justify-center border-3 border-ink/30 border-dashed bg-ink/5">
          <span class="text-2xl opacity-30">ðŸ¥ˆ</span>
        </div>
      <% end %>
    </div>

    <%# 1st Place - Taller %>
    <div class="flex flex-col items-center animate-slide-up" style="animation-delay: 0.3s;">
      <% first = podium[0] %>
      <% if first %>
        <div class="text-6xl mb-2 animate-bouncy" style="animation-delay: 0.5s;"><%= first[:user].avatar %></div>
        <div class="w-28 md:w-32 h-32 rounded-t-xl flex flex-col items-center justify-center border-3 border-ink bg-accent-tertiary/50 px-1"
             style="box-shadow: 6px 6px 0px var(--color-ink);">
          <span class="text-3xl">ðŸ¥‡</span>
          <span class="text-[10px] font-black text-ink uppercase tracking-wide">Champion</span>
          <p class="font-bold text-ink text-base truncate max-w-24 md:max-w-28 text-center"><%= first[:user].name %></p>
          <p class="text-sm text-ink/70 font-semibold"><%= first[:points] %> pts</p>
        </div>
      <% else %>
        <div class="text-5xl mb-2 opacity-30">?</div>
        <div class="w-28 md:w-32 h-32 rounded-t-xl flex items-center justify-center border-3 border-ink/30 border-dashed bg-ink/5">
          <span class="text-3xl opacity-30">ðŸ¥‡</span>
        </div>
      <% end %>
    </div>

    <%# 3rd Place %>
    <div class="flex flex-col items-center animate-slide-up" style="animation-delay: 0.5s;">
      <% third = podium[2] %>
      <% if third %>
        <div class="text-5xl mb-2 animate-bouncy" style="animation-delay: 0.7s;"><%= third[:user].avatar %></div>
        <div class="w-24 md:w-28 h-20 rounded-t-xl flex flex-col items-center justify-center border-3 border-ink bg-accent-orange/30 px-1"
             style="box-shadow: 4px 4px 0px var(--color-ink);">
          <span class="text-2xl">ðŸ¥‰</span>
          <p class="font-bold text-ink text-sm truncate max-w-20 md:max-w-24 text-center"><%= third[:user].name %></p>
          <p class="text-xs text-ink/70 font-semibold"><%= third[:points] %> pts</p>
        </div>
      <% else %>
        <div class="text-4xl mb-2 opacity-30">?</div>
        <div class="w-24 md:w-28 h-20 rounded-t-xl flex items-center justify-center border-3 border-ink/30 border-dashed bg-ink/5">
          <span class="text-2xl opacity-30">ðŸ¥‰</span>
        </div>
      <% end %>
    </div>
  </div>
</div>
