<div class="min-h-screen bg-page flex items-center justify-center p-6 max-sm:p-4 max-sm:pt-16">
  <div class="relative z-10 card-primary animate-slide-up p-10 max-sm:p-8 max-w-md w-full">
    <div class="text-center mb-8">
      <h1 class="form-header max-sm:text-2xl">Editor Settings</h1>
      <p class="form-subheader max-sm:text-sm">Change your password</p>
    </div>

    <% if flash[:alert] %>
      <div class="alert-message mb-4"><%= flash[:alert] %></div>
    <% end %>
    <% if flash[:notice] %>
      <div class="notice-message mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded"><%= flash[:notice] %></div>
    <% end %>

    <%= form_with url: editor_settings_path, method: :patch, class: "flex flex-col gap-6" do |form| %>
      <div class="flex flex-col gap-2">
        <label for="current_password" class="form-label">
          <svg class="w-5 h-5 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
          Current Password
        </label>
        <%= form.password_field :current_password,
            id: "current_password",
            required: true,
            autocomplete: "current-password",
            class: "form-input" %>
      </div>

      <div class="flex flex-col gap-2">
        <label for="password" class="form-label">
          <svg class="w-5 h-5 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/></svg>
          New Password
        </label>
        <%= form.password_field :password,
            id: "password",
            required: true,
            autocomplete: "new-password",
            placeholder: "Minimum 8 characters",
            class: "form-input" %>
      </div>

      <div class="flex flex-col gap-2">
        <label for="password_confirmation" class="form-label">
          <svg class="w-5 h-5 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
          Confirm New Password
        </label>
        <%= form.password_field :password_confirmation,
            id: "password_confirmation",
            required: true,
            autocomplete: "new-password",
            class: "form-input" %>
      </div>

      <div class="flex gap-4 max-sm:flex-col">
        <%= link_to "Back to Stories", stories_path, class: "btn-secondary flex-1 text-center" %>
        <%= form.submit "Update Password", class: "btn-primary flex-1" %>
      </div>
    <% end %>
  </div>
</div>
