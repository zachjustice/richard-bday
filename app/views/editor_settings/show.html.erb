<div class="max-w-[800px] w-full flex flex-col p-8 md:p-4 m-auto">
  <%# Header %>
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-ink text-shadow-heading">Your Account</h1>
    <p class="text-ink/60 mt-2">Manage your profile and view your creative stats</p>
  </div>

  <%# Account Info Card %>
  <div class="bg-white rounded-2xl p-6 md:p-8 mb-6 border-3 border-ink"
       style="box-shadow: 6px 6px 0 var(--color-ink);">
    <h2 class="text-xl font-bold text-ink mb-4 flex items-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
      </svg>
      Profile
    </h2>

    <div class="space-y-4">
      <div>
        <label class="text-sm font-semibold text-ink/60 uppercase tracking-wide">Username</label>
        <p class="text-lg font-semibold text-ink"><%= current_editor.username %></p>
      </div>
      <div>
        <label class="text-sm font-semibold text-ink/60 uppercase tracking-wide">Email</label>
        <p class="text-lg text-ink"><%= current_editor.email %></p>
      </div>
    </div>

    <div class="mt-6 pt-4 border-t border-ink/10">
      <%= link_to edit_editor_settings_path, class: "inline-flex items-center gap-2 text-accent-secondary hover:text-accent-secondary/80 font-semibold transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
        </svg>
        Change Password
      <% end %>
    </div>
  </div>

  <%# Statistics Card %>
  <div class="bg-white rounded-2xl p-6 md:p-8 mb-6 border-3 border-ink"
       style="box-shadow: 6px 6px 0 var(--color-ink);">
    <%= render "editor_settings/statistics", statistics: @statistics %>
  </div>

  <%# Logout Section %>
  <div class="flex justify-end">
    <button class="btn-secondary text-ink/60 hover:text-accent-primary hover:border-accent-primary"
            data-controller="logout-modal"
            data-action="logout-modal#open">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
      </svg>
      Sign Out
    </button>
  </div>

  <%= render "editor_settings/logout_modal" %>
</div>
