<div class="min-h-screen bg-page flex items-center justify-center p-6 max-sm:p-4 flex-col">
  <%= render "shared/login_doodles" %>
  <%= render "shared/login_branding" %>

  <div class="relative z-content card-primary animate-slide-up p-10 max-sm:p-8 max-w-md w-full">
    <div class="text-center mb-8">
      <h1 class="form-header max-sm:text-2xl">Editor Login</h1>
      <p class="form-subheader max-sm:text-sm">Sign in to manage stories and prompts</p>
    </div>

    <% if flash[:alert] %>
      <div class="alert-message mb-4"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with url: editor_login_path, method: :post, class: "flex flex-col gap-6" do |form| %>
      <div class="flex flex-col gap-2">
        <label for="username" class="form-label">
          <svg class="w-5 h-5 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
          Username
        </label>
        <%= form.text_field :username,
            id: "username",
            required: true,
            autofocus: true,
            autocomplete: "username",
            placeholder: "Enter your username",
            class: "form-input" %>
      </div>

      <div class="flex flex-col gap-2">
        <label for="password" class="form-label">
          <svg class="w-5 h-5 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/></svg>
          Password
        </label>
        <%= form.password_field :password,
            id: "password",
            required: true,
            autocomplete: "current-password",
            placeholder: "Enter your password",
            class: "form-input" %>
      </div>

      <%= form.submit "Sign In", class: "btn-primary mt-4", data: { controller: "loading-button" } %>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-ink/60">
        <%= link_to "Forgot your password?", editor_forgot_password_path, class: "font-semibold text-accent-secondary-text hover:underline" %>
      </p>
    </div>
  </div>
</div>
