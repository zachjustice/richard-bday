<div class="min-h-screen bg-page flex items-center justify-center p-6 max-sm:p-4 max-sm:pt-16">
  <%= render "shared/login_doodles" %>

  <div class="relative z-10 card-primary animate-slide-up p-10 max-sm:p-8 max-w-md w-full">
    <div class="text-center mb-8">
      <h1 class="form-header max-sm:text-2xl">Editor Login</h1>
      <p class="form-subheader max-sm:text-sm">Sign in to manage stories and prompts</p>
    </div>

    <% if flash[:alert] %>
      <div class="alert-message mb-4"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with url: editor_login_path, method: :post, class: "flex flex-col gap-6" do |form| %>
      <div class="flex flex-col gap-2">
        <label for="username" class="form-label">
          <span class="text-lg">ðŸ‘¤</span>
          Username
        </label>
        <%= form.text_field :username,
            id: "username",
            required: true,
            autofocus: true,
            autocomplete: "username",
            placeholder: "Enter your username",
            class: "form-input" %>
      </div>

      <div class="flex flex-col gap-2">
        <label for="password" class="form-label">
          <span class="text-lg">ðŸ”‘</span>
          Password
        </label>
        <%= form.password_field :password,
            id: "password",
            required: true,
            autocomplete: "current-password",
            placeholder: "Enter your password",
            class: "form-input" %>
      </div>

      <%= form.submit "Sign In", class: "btn-primary mt-4" %>
    <% end %>
  </div>
</div>
