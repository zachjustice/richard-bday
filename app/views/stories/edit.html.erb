<%# app/views/stories/edit.html.erb %>
<div class="max-w-[1400px] w-full flex flex-col flex-1 p-8 md:p-4 m-auto"
     data-controller="story-editor blank-modal autosave"
     data-autosave-story-id-value="<%= @story.id %>">
  <div class="flex justify-between items-center mb-8 flex-wrap gap-4">
    <h1 class="text-3xl font-bold text-ink m-0">Edit Story: <%= @story.title %></h1>
    <%= link_to "â† Back to Story", story_path(@story), class: "btn-secondary" %>
  </div>

  <div class="grid grid-cols-[2fr_1fr] gap-8 lg:grid-cols-1">
    <!-- Left: Story Form -->
    <div class="bg-white p-8 rounded-xl border-3 border-ink shadow-strong">
      <div id="story_form">
        <%= render "form", story: @story %>
      </div>

      <%# Autosave status indicator %>
      <div class="flex items-center gap-2 mt-3 h-6" data-autosave-target="status">
        <%# States injected by JavaScript %>
      </div>
    </div>

    <!-- Right: Blanks Panel -->
    <div class="bg-page p-6 rounded-xl border-3 border-ink overflow-y-auto lg:max-h-none lg:static shadow-strong">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-ink m-0">Blanks</h2>
        <button type="button"
                class="btn-primary btn-sm"
                data-action="click->blank-modal#open">
          + Add Blank
        </button>
      </div>

      <div class="blanks-help">
        <p class="m-1 text-sm text-ink/60">Insert blanks in your story text using <code class="bg-accent-secondary/15 px-1.5 py-0.5 rounded-sm font-mono text-accent-secondary font-semibold">{blank_id}</code></p>
        <p class="m-1 text-sm text-ink/60">Example: "Once upon a time there was a <code class="bg-accent-secondary/15 px-1.5 py-0.5 rounded-sm font-mono text-accent-secondary font-semibold">{1}</code>."</p>
      </div>

      <div id="blanks_list" class="flex flex-col gap-4 mb-6">
        <% @blanks.each do |blank| %>
          <%= render "blanks/blank", blank: blank, story: @story %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Blank Creation Modal -->
  <%= render "blanks/blank_modal", story: @story %>
</div>
