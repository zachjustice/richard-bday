<%# app/views/stories/index.html.erb %>
<div class="bg-page editor-page-viewport">
  <div class="max-w-[1400px] w-full flex flex-col flex-1 px-4 md:px-8 py-8 m-auto min-h-0">
    <div class="mb-8 flex flex-row justify-between flex-wrap gap-4">
      <div>
        <h1 class="text-3xl font-bold text-ink m-0 text-shadow-heading">Story Library</h1>
        <p class="text-ink/60 mt-2 mb-0">Browse and manage your stories</p>
      </div>
    </div>

    <div class="bg-white p-8 rounded-xl border-3 border-ink shadow-strong flex-1 min-h-0 flex flex-col">
      <h2 class="text-xl font-bold text-ink m-0 mb-4">All Stories (<%= @stories.count %>)</h2>

      <%# Search %>
      <div class="mb-4" data-controller="search" data-search-url-value="<%= stories_path %>" data-search-frame-id-value="results_list">
        <div class="search-input-container">
          <svg class="search-input-icon w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          <input type="text"
                 class="search-input pr-10"
                 placeholder="Search by title, author, or genre..."
                 data-search-target="input"
                 data-action="input->search#search">
          <button type="button"
                  class="absolute right-4 top-1/2 -translate-y-1/2 text-ink/40 hover:text-ink transition-colors hidden"
                  data-search-target="clearButton"
                  data-action="click->search#clear"
            aria-label="Clear search">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>

      <turbo-frame id="results_list"
                   class="block flex-1 min-h-0 overflow-y-auto scroll-fade-overlay"
                   data-controller="scroll-fade">
        <%= render "stories/story_list", stories: @stories %>
      </turbo-frame>
    </div>
  </div>
</div>
