<div class="tutorial-hint tutorial-hint--<%= position %> hidden"
     data-tutorial-hints-target="<%= target %>">
  <div class="tutorial-hint-content">
    <button type="button"
            class="tutorial-hint-dismiss"
            data-action="click->tutorial-hints#<%= dismiss_action %>"
            aria-label="Dismiss hint">
      <svg width="14" height="14" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round">
        <path d="M4 4l12 12M16 4l-12 12"/>
      </svg>
    </button>
    <span class="tutorial-hint-text"><%= text %></span>
    <div class="tutorial-hint-arrow tutorial-hint-arrow--<%= arrow_direction %>"></div>
  </div>
</div>
