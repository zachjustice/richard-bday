<%# Decorative SVG doodles for login page background %>
<div class="fixed inset-0 pointer-events-none overflow-hidden" aria-hidden="true">
  <!-- Question mark -->
  <svg class="doodle-decoration absolute top-[15%] left-[8%] w-10 h-14 rotate-[-8deg]" viewBox="0 0 40 56" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round">
    <path d="M12 16c0-8 16-8 16 0c0 6-8 8-8 16" class="text-accent-tertiary"/>
    <circle cx="20" cy="44" r="3" fill="currentColor" class="text-accent-tertiary"/>
  </svg>

  <!-- Pencil -->
  <svg class="doodle-decoration absolute top-[20%] right-[10%] w-12 h-12 rotate-[25deg]" viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
    <path d="M8 40l4-16L36 8l4 4-24 24z" class="text-accent-primary"/>
    <path d="M28 12l4 4" class="text-accent-primary"/>
  </svg>

  <!-- Speech bubble -->
  <svg class="doodle-decoration absolute bottom-[30%] left-[6%] w-14 h-12 rotate-[-5deg]" viewBox="0 0 56 48" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
    <path d="M8 8h32c4 0 8 4 8 8v12c0 4-4 8-8 8H24l-8 8v-8H8c-4 0-8-4-8-8V16c0-4 4-8 8-8z" class="text-accent-secondary"/>
  </svg>

  <!-- Checkmark -->
  <svg class="doodle-decoration absolute top-[50%] right-[8%] w-10 h-10 rotate-6" viewBox="0 0 40 40" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
    <path d="M8 20l8 10 16-20" class="text-accent-tertiary"/>
  </svg>

  <!-- Key -->
  <svg class="doodle-decoration absolute bottom-[20%] right-[15%] w-12 h-8 rotate-[-15deg]" viewBox="0 0 48 32" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round">
    <circle cx="12" cy="16" r="8" class="text-accent-primary"/>
    <path d="M20 16h20M32 16v6M40 16v8" class="text-accent-primary"/>
  </svg>

  <!-- Lightning bolt -->
  <svg class="doodle-decoration absolute top-[70%] left-[12%] w-8 h-12 rotate-12" viewBox="0 0 32 48" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
    <path d="M20 4L8 24h10l-4 20 16-24H18l4-16z" class="text-accent-secondary"/>
  </svg>
</div>
