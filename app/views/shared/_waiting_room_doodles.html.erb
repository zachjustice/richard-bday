<%# Decorative SVG doodles for waiting room - notebook/creative theme %>
<div class="absolute inset-0 pointer-events-none overflow-hidden" aria-hidden="true">
  <!-- Pencil - top left, angled as if drawing -->
  <svg class="doodle-decoration absolute top-[8%] left-[6%] w-16 h-16 rotate-[-25deg]" viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M12 52L52 12" class="text-accent-tertiary"/>
    <path d="M48 8l8 8-4 4-8-8z" class="text-accent-primary"/>
    <path d="M8 56l4-8 8 8-8 4z" class="text-accent-tertiary"/>
    <line x1="16" y1="48" x2="44" y2="20" class="text-ink/30"/>
  </svg>

  <!-- Loop-de-loop swirl - top right -->
  <svg class="doodle-decoration absolute top-[12%] right-[8%] w-20 h-12 rotate-6" viewBox="0 0 80 48" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round">
    <path d="M4 24c8-16 16 0 24-16s16 16 24 0s16 16 24-8" class="text-accent-secondary"/>
  </svg>

  <!-- 4-point sparkle star cluster - bottom left -->
  <svg class="doodle-decoration absolute bottom-[15%] left-[5%] w-14 h-14" viewBox="0 0 56 56" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
    <!-- Large star -->
    <path d="M28 8v12M28 36v12M8 28h12M36 28h12" class="text-accent-tertiary"/>
    <path d="M16 16l8 8M32 32l8 8M16 40l8-8M32 24l8-8" class="text-accent-tertiary"/>
    <!-- Small star offset -->
    <path d="M44 12v6M44 6v2M38 9h6M46 9h4" class="text-accent-primary"/>
  </svg>

  <!-- Spiral/notebook binding - left edge, vertical -->
  <svg class="doodle-decoration absolute top-[35%] left-[2%] w-6 h-32" viewBox="0 0 24 128" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
    <circle cx="12" cy="16" r="6" class="text-ink/20"/>
    <circle cx="12" cy="40" r="6" class="text-ink/20"/>
    <circle cx="12" cy="64" r="6" class="text-ink/20"/>
    <circle cx="12" cy="88" r="6" class="text-ink/20"/>
    <circle cx="12" cy="112" r="6" class="text-ink/20"/>
  </svg>

  <!-- Wavy underline scribble - bottom right -->
  <svg class="doodle-decoration absolute bottom-[20%] right-[10%] w-24 h-8 rotate-[-5deg]" viewBox="0 0 96 32" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round">
    <path d="M4 16c12-10 24 10 36 0s24 10 36 0" class="text-accent-secondary"/>
  </svg>

  <!-- Small sparkle dots scattered - top center-right -->
  <svg class="doodle-decoration absolute top-[25%] right-[25%] w-8 h-8" viewBox="0 0 32 32" fill="currentColor">
    <circle cx="8" cy="8" r="2" class="text-accent-tertiary"/>
    <circle cx="24" cy="12" r="1.5" class="text-accent-primary"/>
    <circle cx="16" cy="24" r="2" class="text-accent-secondary"/>
  </svg>

  <!-- Curly bracket / brace - right side -->
  <svg class="doodle-decoration absolute top-[50%] right-[4%] w-8 h-20 rotate-12" viewBox="0 0 32 80" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
    <path d="M24 4c-12 0-12 16-12 32s0 32 12 32" class="text-accent-tertiary"/>
  </svg>

  <!-- Small loop doodle - bottom center -->
  <svg class="doodle-decoration absolute bottom-[8%] left-[40%] w-12 h-8" viewBox="0 0 48 32" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
    <path d="M4 24c8-24 16 0 20-16s12 24 20 0" class="text-accent-primary"/>
  </svg>
</div>
