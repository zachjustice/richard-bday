<%# Flash Messages - displays notice and alert messages with auto-dismiss %>
<div id="flash-messages"
     class="fixed top-6 right-6 z-50 flex flex-col gap-3 max-w-[500px] w-[calc(100vw-3rem)] sm:w-auto"
     data-controller="flash-messages">
  <% if flash[:notice] %>
    <div class="flash-message flash-notice"
         data-flash-messages-target="message"
         data-flash-type="notice"
         role="alert">
      <div class="flex items-center gap-3 flex-1 min-w-0">
        <span class="text-xl shrink-0">✓</span>
        <span class="text-sm font-medium leading-normal wrap-break-word text-white"><%= flash[:notice] %></span>
      </div>
      <button type="button"
              class="flash-dismiss"
              data-action="click->flash-messages#dismiss"
              aria-label="Dismiss notification">
        ✕
      </button>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="flash-message flash-alert"
         data-flash-messages-target="message"
         data-flash-type="alert"
         role="alert">
      <div class="flex items-center gap-3 flex-1 min-w-0">
        <span class="text-xl shrink-0">⚠️</span>
        <span class="text-sm font-medium leading-normal wrap-break-word text-white"><%= flash[:alert] %></span>
      </div>
      <button type="button"
              class="flash-dismiss"
              data-action="click->flash-messages#dismiss"
              aria-label="Dismiss alert">
        ✕
      </button>
    </div>
  <% end %>
</div>
