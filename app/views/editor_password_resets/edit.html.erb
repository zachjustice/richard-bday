<% content_for(:skip_flash_banner, true) %>

<div class="min-h-screen bg-page flex items-center justify-center p-6 max-sm:p-4 max-sm:pt-16">
  <%= render "shared/login_doodles" %>

  <div class="relative z-content card-primary animate-slide-up p-10 max-sm:p-8 max-w-md w-full">
    <div class="text-center mb-8">
      <h1 class="form-header max-sm:text-2xl">Reset Password</h1>
      <p class="form-subheader max-sm:text-sm">Choose a new password for your account</p>
    </div>

    <% if flash[:notice] %>
      <div class="notice-message mb-4" role="status"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert-message mb-4" role="alert"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with url: editor_reset_password_path(token: params[:token]), method: :patch, class: "flex flex-col gap-6" do |form| %>
      <div class="flex flex-col gap-2">
        <label for="password" class="form-label">New Password</label>
        <%= form.password_field :password,
            id: "password",
            required: true,
            autofocus: true,
            autocomplete: "new-password",
            placeholder: "Minimum 8 characters",
            class: "form-input" %>
      </div>

      <%= form.submit "Update Password", class: "btn-primary mt-4" %>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-500">
        Remember your password? <%= link_to "Sign in", editor_login_path, class: "font-semibold text-accent-secondary-text hover:underline" %>
      </p>
    </div>
  </div>
</div>
