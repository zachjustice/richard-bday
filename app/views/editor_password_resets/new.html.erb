<div class="min-h-screen bg-page flex items-center justify-center p-6 max-sm:p-4 max-sm:pt-16">
  <%= render "shared/login_doodles" %>

  <div class="relative z-10 card-primary animate-slide-up p-10 max-sm:p-8 max-w-md w-full">
    <div class="text-center mb-8">
      <h1 class="form-header max-sm:text-2xl">Forgot Password</h1>
      <p class="form-subheader max-sm:text-sm">Enter your email to receive reset instructions</p>
    </div>

    <% if flash[:alert] %>
      <div class="alert-message mb-4"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with url: editor_forgot_password_path, method: :post, class: "flex flex-col gap-6" do |form| %>
      <div class="flex flex-col gap-2">
        <label for="email" class="form-label">Email</label>
        <%= form.email_field :email,
            id: "email",
            required: true,
            autofocus: true,
            autocomplete: "email",
            placeholder: "Enter your email address",
            class: "form-input" %>
      </div>

      <%= form.submit "Send Reset Link", class: "btn-primary mt-4" %>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-500">
        Remember your password? <%= link_to "Sign in", editor_login_path, class: "font-semibold text-accent-secondary hover:underline" %>
      </p>
    </div>
  </div>
</div>
