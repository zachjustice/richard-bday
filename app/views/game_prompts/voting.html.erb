<% content_for(:skip_flash_banner, true) %>
<% unless @current_user.audience? %>
  <%= turbo_stream_from "rooms:#{@current_room.id}:nav-updates" %>
<% end %>
<% if @current_user.audience? %>
  <%= render "game_prompts/voting_audience", game_prompt: @game_prompt, answers: @answers %>
<% elsif @current_room.vote_once? %>
  <div class="<%= discord_authenticated? ? 'flex items-center max-sm:items-start justify-center bg-page' : 'min-h-screen flex items-center max-sm:items-start justify-center bg-page overflow-auto' %>">
    <div class="card-primary animate-slide-up <%= discord_authenticated? ? 'p-6 m-4 relative z-content' : 'p-10 m-10' %> max-sm:p-4 max-sm:m-4 max-w-2xl w-full flex flex-col flex-1 min-h-0 max-h-[640px]">
      <%= render "shared/round_badge" if discord_authenticated? %>

      <div class="text-center mb-8">
        <h2 class="text-2xl max-sm:text-xl font-bold text-gray-900 leading-snug"><%= @game_prompt.prompt.description %></h2>
      </div>

      <% if flash[:notice] %>
        <div class="notice-message mb-4" role="status"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert-message mb-4" role="alert"><%= flash[:alert] %></div>
      <% end %>

      <%= form_with url: "/vote", method: :post, class: "flex flex-1 flex-col gap-6 min-h-0" do |form| %>
        <%= form.hidden_field :game_prompt_id, required: true, value: @game_prompt.id %>

        <div class="flex flex-1 min-h-0">
          <div class="flex flex-1 min-h-0 overflow-y-auto flex-col gap-4 scroll-fade-indicators p-1">
            <%= form.collection_radio_buttons :answer_id, @answers, :id, :text do |b| %>
              <label class="answer-option">
                <%= b.radio_button name: 'answer_id', value: :id, class: "answer-radio" %>
                <div class="answer-content">
                  <span class="answer-checkmark">âœ“</span>
                  <p class="answer-text"><%= b.text %></p>
                </div>
              </label>
            <% end %>
          </div>
        </div>

        <%= form.submit "Submit Vote", class: "btn-primary mt-4", data: { controller: "loading-button" } %>
      <% end %>
    </div>
  </div>
<% else %>
  <%= render "game_prompts/voting_ranked", game_prompt: @game_prompt, answers: @answers %>
<% end %>
