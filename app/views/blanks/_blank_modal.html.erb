<div id="blank-editor-modal"
     class="blank-modal hidden"
     data-blank-modal-target="modal"
     role="dialog"
     aria-labelledby="blank-modal-title"
     aria-modal="true">
  <div class="blank-backdrop" data-action="click->blank-modal#close"></div>
  <div class="blank-content">
    <div class="blank-modal-header">
      <h2 id="blank-modal-title"
          class="blank-title"
          data-blank-modal-target="title">
        Add New Blank
      </h2>
      <button type="button"
              class="blank-close"
              data-action="click->blank-modal#close"
              aria-label="Close">
        âœ•
      </button>
    </div>
    <div class="blank-modal-body">
      <%= render "blanks/form", story: story, blank: Blank.new %>
    </div>
  </div>
</div>
