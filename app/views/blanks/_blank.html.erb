<!-- app/views/blanks/_blank.html.erb -->
<div id="blank_<%= blank.id %>" class="blank-item" data-controller="blank-editor">
  <div class="blank-display" data-blank-editor-target="display">
    <div class="blank-header">
      <span class="blank-id">{<%= blank.id %>}</span>
      <div class="blank-actions">
        <button type="button" 
                class="btn-icon" 
                data-action="click->blank-editor#edit"
          title="Edit">
          ✏️
        </button>
        <%= button_to story_blank_path(story, blank), 
            method: :delete,
            data: { turbo_confirm: "Delete this blank?" },
            class: "btn-icon",
            title: "Delete" do %>
          🗑️
        <% end %>
      </div>
    </div>
    <div class="blank-tags">
      <% blank.tags_array.each do |tag| %>
        <span class="tag"><%= tag %></span>
      <% end %>
    </div>
    <p class="blank-matches">
      <%= pluralize(blank.matching_prompts.count, "matching prompt") %>
    </p>
  </div>

  <div class="blank-form" data-blank-editor-target="form" style="display: none;">
    <%= render "blanks/blank_form", blank: blank, story: story %>
  </div>
</div>