<%# app/views/blanks/_blank.html.erb %>
<div id="blank_<%= blank.id %>" class="blank-item" data-controller="blank-editor">
  <div class="flex flex-col gap-2" data-blank-editor-target="display">
    <div class="flex justify-between items-center">
      <p class="m-0">
        Blank ID: <span class="blank-id">{<%= blank.id %>}</span>
      </p>
      <div class="flex gap-2">
        <%= link_to edit_story_blank_path(story, blank),
            class: "hidden",
            data: {
              blank_editor_target: "editLink",
              turbo_stream: true
            } do %>
        <% end %>

        <button type="button"
                class="btn-icon"
                data-action="click->blank-editor#openEditModal"
                title="Edit">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/></svg>
        </button>

        <%= button_to story_blank_path(story, blank),
            method: :delete,
            data: { turbo_confirm: "Delete this blank?" },
            class: "btn-icon",
            title: "Delete" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
        <% end %>
      </div>
    </div>

    <% if blank.matching_prompts.size == 0 %>
      <p class="text-xs text-ink/60 m-0">
        0 matching prompts
      </p>
    <% end %>

    <div class="text-xs text-ink/60 m-0">
      <ul class="list-none p-0 m-0 space-y-2">
        <% blank.matching_prompts.each_with_index do |prompt, index| %>
          <li class="text-sm text-ink/70 group"
              data-controller="inline-prompt-editor"
              data-inline-prompt-editor-prompt-id-value="<%= prompt.id %>"
              data-inline-prompt-editor-update-url-value="<%= update_prompt_path(prompt) %>">
            <div class="flex items-start gap-2" data-inline-prompt-editor-target="display">
              <span class="prompt-text flex-1"><%= index + 1 %>. <%= prompt.description %></span>
              <% if prompt.owned_by?(current_editor) %>
                <button type="button"
                        class="btn-icon opacity-0 group-hover:opacity-100 transition-opacity p-1"
                        data-action="click->inline-prompt-editor#edit"
                        title="Edit prompt">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/></svg>
                </button>
              <% end %>
            </div>
            <div class="hidden mt-2" data-inline-prompt-editor-target="form">
              <%= form_with model: prompt, url: update_prompt_path(prompt), method: :patch,
                  data: { action: "submit->inline-prompt-editor#save" }, local: false do |f| %>
                <%= f.text_area :description,
                    value: prompt.description,
                    rows: 2,
                    class: "story-form-textarea w-full text-sm",
                    data: { inline_prompt_editor_target: "input" } %>
                <div class="flex gap-2 mt-2">
                  <button type="submit" class="btn-primary btn-sm py-1 px-3 text-xs">Save</button>
                  <button type="button" class="btn-secondary btn-sm py-1 px-3 text-xs" data-action="click->inline-prompt-editor#cancel">Cancel</button>
                </div>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="flex flex-wrap gap-2">
      <% blank.tags_array.each do |tag| %>
        <span class="tag"><%= tag %></span>
      <% end %>
    </div>
  </div>
</div>
