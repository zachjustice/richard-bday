<%# app/views/blanks/_blank_form.html.erb %>
<%= form_with model: blank,
    url: story_blank_path(story, blank),
    method: :patch,
    class: "flex flex-col gap-4" do |form| %>

  <div class="flex flex-col gap-2">
    <%= form.label :tags, "Tags (comma-separated)", class: "font-semibold text-ink" %>
    <%= form.text_field :tags,
        placeholder: "noun,animal,funny",
        required: true,
        class: "story-form-input" %>
    <p class="text-sm text-ink/60 italic m-0">Examples: noun,animal,funny or adjective,colorful</p>
  </div>

  <div class="flex gap-4 pt-2">
    <%= form.submit "Save", class: "btn-primary btn-sm" %>
    <button type="button"
            data-action="click->blank-editor#cancelEdit"
            class="btn-secondary btn-sm">
      Cancel
    </button>
  </div>
<% end %>
