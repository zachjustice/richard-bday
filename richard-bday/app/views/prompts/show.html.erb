<h2>
  <%= @prompt.description %>
</h2>
<div>
  <%= form_with url: "/answer", method: :post do |form| %>
    <%= form.hidden_field :prompt_id, required: true, value: @prompt.id %><br>
    <%= form.textarea :text, required: true, autocomplete: "off", placeholder: "Enter your answer..."%>
    <br>
    <%= form.submit "Submit" %>
  <% end %>
</div>
